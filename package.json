{
  "name": "@edno/graphql-markdown",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": "~14.16.1",
    "npm": "~7.12.0"
  },
  "scripts": {
    "prettier": "prettier --write \"./packages/**/*.{ts,js,json,md}\"",
    "lint": "eslint --cache \"./packages/**/*.{ts,js}\" --fix",
    "lint:ci": "eslint \"./packages/**/*.{ts,js}\"",
    "danger": "danger local -b main --failOnErrors",
    "danger:ci": "danger ci -b main",
    "test": "jest",
    "test:unit": "jest --projects tests/unit",
    "test:integration": "jest --projects tests/integration",
    "test:ci": "jest --runInBand --noStackTrace --ci",
    "pre-commit": "yarn prettier && yarn lint",
    "pre-push": "yarn lint:ci && yarn test --bail && yarn test:coverage && yarn danger",
    "test:stryker": "stryker run",
    "test:stryker:ci": "stryker run --reporters=progress-append-only --reporters=clear-text",
    "test:coverage": "sh ./scripts/coverage.sh"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^4.0.0",
    "@stryker-mutator/jest-runner": "^4.1.1",
    "colors": "^1.4.0",
    "danger": "^10.6.4",
    "diff": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nyc": "^15.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "pre-push": "yarn pre-push"
    }
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "arrowParens": "always",
          "printWidth": 80,
          "trailingComma": "all",
          "tabWidth": 2
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "commonjs": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ]
        }
      }
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "tests/**/*.js"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:prettier/recommended",
          "prettier",
          "plugin:jest/recommended",
          "plugin:jest/style"
        ]
      }
    ],
    "rules": {
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": false
        }
      ]
    }
  }
}
